{
  "version": "0.0.1",
  "name": "vitamer-bundle",
  "description": "Bundle variations for Vitamer",
  "repository": {
    "type": "git",
    "url": "git://github.com/eliot-akira/vitamer-bundle.git"
  },
  "main": "./index.js",
  "scripts": {
    "start": "npm run build",
    "build": "mkdir -p build && npm run build-core && npm run build-mixins && npm run build-query-result && npm run build-standard && npm run build-standard-qr && npm run build-standard-mixins && npm run build-standard-mixins-qr && npm run build-dom-events",
    "build-core": "cat template/license.min.txt > build/vitamer-core.js && browserify src/core.js | uglifyjs >> build/vitamer-core.js",
    "build-standard": "cat template/license.min.txt > build/vitamer.js && browserify src/standard.js | uglifyjs >> build/vitamer.js",
    "build-standard-qr": "cat build/vitamer.js build/query-result.js > build/vitamer-qr.js",
    "build-standard-mixins": "cat build/vitamer.js build/dom-class-mixins.js > build/vitamer-mixins.js",
    "build-standard-mixins-qr": "cat build/vitamer.js build/dom-class-mixins.js build/query-result.js > build/vitamer-mixins-qr.js",
    "build-mixins": "cat template/mixin.before node_modules/dom-class/build/dom-class-mixins.js > build/dom-class-mixins.js",
    "build-query-result": "cp node_modules/query-result/build/query-result.js node_modules/query-result/build/query-result.node.js build",
    "build-dom-events": "browserify src/dom-events.js | uglifyjs > build/dom-events.js",
    "clean": "rm build/*",
    "example": "tiny-cdn run -s=./example"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "tiny-cdn": "^0.5.2",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "document-register-element": "^0.5.3",
    "dom-class": "^0.5.0",
    "dom4": "^1.5.2",
    "es-class": "^2.1.1",
    "restyle": "^0.5.1"
  },
  "license": "MIT"
}
